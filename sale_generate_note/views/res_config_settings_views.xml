<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="sale_generate_note_res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.sale.generate.note</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//block[@name='invoicing_setting_container']" position="after">
        <block title="Generate Note" name="generate_note_setting_container">
          <setting id="sale_generate_note_config" string="Generate Note on Sale Order" help="Generate internal note and chatter automatically when sale order is created and sale order line product quantity is changed">
            <field name="generate_note" />
          </setting>
        </block>
      </xpath>
    </field>
  </record>

</odoo>
